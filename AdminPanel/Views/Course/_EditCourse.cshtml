@model BLL.DTOs.CourseDetailsDTO

<div class="modal-header">
    <h1 class="modal-title fs-5" id="editCourseLabel">Edit Course</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form asp-controller="Course" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ThumbnailUrl" />
        
        <div class="row g-2">
            <div class="col-12">
                <div class="img">
                    @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                    {
                        <img src="/Files/courses/@Model.ThumbnailUrl" alt="@Model.Title" class="img-thumbnail mb-2" style="max-height: 150px;">
                    }
                    <label for="thumbnailFile" class="labelFile">
                        <span>
                            <i class="fa-solid fa-upload"></i>
                        </span> 
                        <p>Update thumbnail (leave empty to keep the current one)</p>
                    </label>
                    <input class="input" type="file" id="thumbnailFile" name="thumbnailFile" />
                </div>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" asp-for="Title">Course Title</label>
                <input type="text" class="form-control" asp-for="Title" required>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="CategoryId">Course Category</label>
                <select class="form-select" name="CategoryId">
                    <option value="">-- Select Category --</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Value" selected="@(category.Text == Model.CategoryName)">@category.Text</option>
                    }
                </select>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" asp-for="Price">Price</label>
                <div class="input-group mb-3 mx-auto">
                    @* <span class="input-group-text rounded-start-0 rounded-end-2">00.</span> *@
                    <input type="number" step="0.01" class="form-control text-center" asp-for="Price">
                    <span class="input-group-text rounded-start-2 rounded-end-0">EGP</span>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" asp-for="Path">URL Slug</label>
                <input type="text" class="form-control" asp-for="Path">
                <span asp-validation-for="Path" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" asp-for="Tags">Tags</label>
                <input type="text" class="form-control" asp-for="Tags">
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" asp-for="Intro_Video">Intro Video</label>
                <input type="text" class="form-control" asp-for="Intro_Video">
                <span asp-validation-for="Intro_Video" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" asp-for="CourseType">Course Type</label>
                <select class="form-select" asp-for="CourseType">
                    <option value="Online">Online</option>
                    <option value="Recorded">Recorded</option>
                    <option value="Live">Live</option>
                </select>
                <span asp-validation-for="CourseType" class="text-danger"></span>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" asp-for="Level">Audience Level</label>
                <select class="form-select" asp-for="Level">
                    <option value="Beginner">Beginner</option>
                    <option value="Intermediate">Intermediate</option>
                    <option value="Advanced">Advanced</option>
                    <option value="All">All Levels</option>
                </select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            
            <div class="col-12">
                <label class="form-label" asp-for="Description">Course Description</label>
                <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="col-12">
                <label class="form-label" asp-for="Details">Course Details</label>
                <textarea class="form-control" asp-for="Details" rows="4"></textarea>
                <span asp-validation-for="Details" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
