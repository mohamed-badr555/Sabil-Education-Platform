@model BLL.DTOs.CourseDetailsDTO

<div class="modal-header">
    <h1 class="modal-title fs-5" id="editCourseLabel">Edit Course</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" name="Id" value="@Model.Id" />
        
        <input type="hidden" name="ThumbnailUrl" value="@Model.ThumbnailUrl" />
        <div class="row g-2">
            <div class="col-12">
                <div class="img">
                    @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                    {
                        <img src="/Files/courses/@Model.ThumbnailUrl" alt="@Model.Title" class="img-thumbnail mb-2" style="max-height: 150px;">
                    }
                    <label for="thumbnailFile" class="labelFile">
                        <span>
                            <i class="fa-solid fa-upload"></i>
                        </span> 
                        <p>Update thumbnail (leave empty to keep the current one)</p>
                    </label>
                    <input class="input" type="file" id="thumbnailFile" name="thumbnailFile" />
                </div>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="Title">Title</label>
                <input type="text" class="form-control" name="Title" value="@Model.Title" required>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="CategoryId">CategoryId</label>
                <select class="form-select" name="CategoryId">
                    <option value="">-- Select Category --</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.Value" selected="@(category.Text == Model.CategoryName)">@category.Text</option>
                    }
                </select>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="Price">Price </label>
                <div class="input-group mb-3 mx-auto">
                    <span class="input-group-text rounded-start-0 rounded-end-2">00.</span>
                    <input type="number" step="0.01" class="form-control text-center" name="Price" value="@Model.Price">
                    <span class="input-group-text rounded-start-2 rounded-end-0">EGP</span>
                </div>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="Path"> Path </label>
                <input type="text" class="form-control" name="Path" value="@Model.Path">
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="Tags"> Tags </label>
                <input type="text" class="form-control" name="Tags" value="@Model.Tags">
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="Intro_Video">Intro_Video </label>
                <input type="text" class="form-control" name="Intro_Video" value="@Model.Intro_Video">
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="CourseType">CourseType</label>
                <select class="form-select" name="CourseType">
                    <option value="Online" selected="@(Model.CourseType == "Online")">Online</option>
                    <option value="Recorded" selected="@(Model.CourseType == "Recorded")">Recorded</option>
                    <option value="Live" selected="@(Model.CourseType == "Live")">Live</option>
                </select>
            </div>
            
            <div class="col-md-6">
                <label class="form-label" for="Level">Level</label>
                <select class="form-select" name="Level">
                    <option value="Beginner" selected="@(Model.Level == "Beginner")">Beginner</option>
                    <option value="Intermediate" selected="@(Model.Level == "Intermediate")">Intermediate</option>
                    <option value="Advanced" selected="@(Model.Level == "Advanced")">Advanced</option>
                    <option value="All" selected="@(Model.Level == "All")">All Levels</option>
                </select>
            </div>
            
            <div class="col-12">
                <label class="form-label" for="Description"> Description </label>
                <textarea class="form-control" name="Description" rows="3">@Model.Description</textarea>
            </div>
            
            <div class="col-12">
                <label class="form-label" for="Details"></label>
                <textarea class="form-control" name="Details" rows="4">@Model.Details</textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>
