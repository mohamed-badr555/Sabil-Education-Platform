@model BLL.DTOs.CourseDetailsDTO

@{
    ViewData["Title"] = "Edit Course";
}

<section class="p-2 border-end border-top border-4 border-primary">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Edit Course</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Back to List
        </a>
    </div>

    <hr class="link-primary" style="height: 5px; width: 100%;">

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ThumbnailUrl" />
        
        <div class="row g-3">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Course Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Title">Course Title</label>
                                <input type="text" class="form-control" asp-for="Title" required>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label" for="CategoryId">Course Category</label>
                                <select class="form-select" name="CategoryId">
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in ViewBag.Categories)
                                    {
                                        <option value="@category.Value" selected="@(category.Text == Model.CategoryName)">@category.Text</option>
                                    }
                                </select>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Path">URL Slug</label>
                                <input type="text" class="form-control" asp-for="Path">
                                <span asp-validation-for="Path" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Price">Price</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" class="form-control" asp-for="Price">
                                    <span class="input-group-text">EGP</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4 h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Course Media</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Course Thumbnail</label>
                            <div class="img mb-3">
                                @if (!string.IsNullOrEmpty(Model.ThumbnailUrl))
                                {
                                    <img src="/Files/courses/@Model.ThumbnailUrl" alt="@Model.Title" class="img-thumbnail" style="max-height: 200px;">
                                }
                                <div class="mt-3">
                                    <label for="thumbnailFile" class="btn btn-outline-primary">
                                        <i class="fa-solid fa-upload"></i> Change Thumbnail
                                    </label>
                                    <input class="input d-none" type="file" id="thumbnailFile" name="thumbnailFile" />
                                    <div id="thumbnail-preview-name" class="small text-muted mt-1"></div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="Intro_Video">Intro Video URL</label>
                            <input type="text" class="form-control" asp-for="Intro_Video">
                            <span asp-validation-for="Intro_Video" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-4 h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Course Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Tags">Tags (comma separated)</label>
                            <input type="text" class="form-control" asp-for="Tags">
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="CourseType">Course Type</label>
                            <select class="form-select" asp-for="CourseType">
                                <option value="Online">Online</option>
                                <option value="Recorded">Recorded</option>
                                <option value="Live">Live</option>
                            </select>
                            <span asp-validation-for="CourseType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="Level">Audience Level</label>
                            <select class="form-select" asp-for="Level">
                                <option value="Beginner">Beginner</option>
                                <option value="Intermediate">Intermediate</option>
                                <option value="Advanced">Advanced</option>
                                <option value="All">All Levels</option>
                            </select>
                            <span asp-validation-for="Level" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Course Content</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label" asp-for="Description">Course Description</label>
                            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label" asp-for="Details">Course Details</label>
                            <textarea class="form-control" asp-for="Details" rows="6"></textarea>
                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12">
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <script>
        // Preview selected thumbnail file
        document.getElementById('thumbnailFile').addEventListener('change', function() {
            if (this.files && this.files[0]) {
                // Display file name
                document.getElementById('thumbnail-preview-name').textContent = this.files[0].name;
                
                // Create preview image
                const reader = new FileReader();
                reader.onload = function(e) {
                    const imgContainer = document.querySelector('.img');
                    // Remove current image if it exists
                    const currentImage = imgContainer.querySelector('img');
                    if (currentImage) {
                        currentImage.remove();
                    }
                    
                    // Create new image element
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.alt = 'Thumbnail Preview';
                    img.className = 'img-thumbnail';
                    img.style.maxHeight = '200px';
                    
                    // Insert at the beginning of img container
                    imgContainer.insertBefore(img, imgContainer.firstChild);
                };
                reader.readAsDataURL(this.files[0]);
            }
        });

        // Generate slug from title
        document.querySelector('input[asp-for="Title"]').addEventListener('blur', function() {
            const pathInput = document.querySelector('input[asp-for="Path"]');
            if (!pathInput.value) {
                pathInput.value = this.value
                    .toLowerCase()
                    .replace(/[^a-z0-9]+/g, '-')
                    .replace(/-+/g, '-')
                    .replace(/^-|-$/g, '');
            }
        });
    </script>
}
