@model AdminPanel.Models.CategoryViewModel

@{
    ViewData["Title"] = "Categories";
}

<section>
    <div class="d-flex headCat pb-3 justify-content-between align-items-center">
        <div> Number Of Categories: @Model.TotalCount </div>
        <div>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addCategory">
                <i class="fa-solid fa-plus"></i>
                Add Category
            </button>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!--Add Modal -->
    <div class="modal fade" id="addCategory" tabindex="-1" aria-labelledby="addCategoryLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="addCategoryLabel">Add Category</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="Add" method="post">
                    <div class="modal-body">
                        <div class="row g-2">
                            <div class="col-12">
                                <label class="form-label" for="Name">Category Name</label>
                                <input placeholder="Add Category Name" class="form-control" name="Name" id="Name" required maxlength="100">
                                <span class="text-danger" id="name-validation"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="row mt-3 g-2">
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-4">
                <div class="CardCategory">
                    <h2 class="text-center">@category.Name</h2>
                    <span class="badge bg-info">@category.CourseCount Courses</span>
                    <hr />
                    <div class="d-flex align-items-center justify-content-around">
                        <button type="button" class="btn btn-outline-warning edit-category" data-id="@category.Id">
                            Edit Category
                        </button>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                            <input type="hidden" name="id" value="@category.Id" />
                            <button type="submit" class="btn btn-outline-danger">Delete Category</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Edit Modal (will be populated via AJAX) -->
    <div class="modal fade" id="editCategory" tabindex="-1" aria-labelledby="editCategoryLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content" id="editCategoryContent">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(function() {
            $('.edit-category').click(function() {
                var categoryId = $(this).data('id');
                $('#editCategoryContent').load('@Url.Action("Edit", "Category")/' + categoryId, function() {
                    $('#editCategory').modal('show');
                });
            });
        });
    </script>
}